# Database
DATABASE_URL=postgresql://myuser:mypassword@localhost:5432/mydb

# Redis
REDIS_URL=redis://localhost:6379

# NextAuth (Web App)
NEXTAUTH_SECRET=replace-with-openssl-rand-hex-32-or-long-random-string
NEXTAUTH_URL=https://your-domain.com

# Site URL (canonical, sitemap, OG)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# CORS — comma-separated allowed origins
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Worker API (Docker: http://worker:3001; local: http://localhost:7388)
WORKER_API_URL=http://worker:3001
WORKER_API_TOKEN=replace-with-openssl-rand-hex-32

# SMTP (Worker — digest emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notifications@example.com
SMTP_PASS=example-smtp-password
SMTP_FROM=noreply@example.com

# Timezone
TZ=America/Sao_Paulo

# Digest (cron-style time)
DIGEST_TIME=09:00

# Worker API port (inside container)
WORKER_API_PORT=3001

# Admin (seed / first login)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=example-admin-password

# Logging: debug | info | warn | error
LOG_LEVEL=error

# Feed default refresh (minutes)
DEFAULT_REFRESH_INTERVAL_MINUTES=180

# Node heap limit (optional)
NODE_OPTIONS=--max-old-space-size=256

# PostgreSQL (optional, when not using Docker)
POSTGRES_SHARED_BUFFERS=64MB

# Redis memory limit (optional)
REDIS_MAXMEMORY=100mb
